//- layout.jade
doctype html
html(lang='en')
    head
        block title
            title My App
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')

        link(rel='shortcut icon', href='/images/favicon.ico', type='image/x-icon')
        link(rel='icon', href='/images/favicon.ico', type='image/x-icon')
        link(rel='stylesheet', href='/css/watson-bootstrap-dark.css')
        link(rel='stylesheet', href='/css/style.css')
        link(rel='stylesheet', href='/css/datetimepicker.css')

    body
        mixin sentiment(value)
            if value === 1
                img(src='/images/s_bom_small.png')
            else if value === 2
                img(src='/images/s_medio_small.png')
            else
                img(src='/images/s_ruim_small.png')
        mixin user_photo(name)
            if name !== undefined
                img(src='/images/#{name}.png')
            else
                img(src='/images/user.png')
        include header.jade
        
        div.main
            block row-content
        script(type='text/javascript', src='/js/lib/jquery-2.1.0.min.js')
        script(type='text/javascript', src='/js/lib/bootstrap-3.3.1.min.js')
        block scripts
            