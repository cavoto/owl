//- index.jade
extends ./layout.jade
block row-content
    div      
        .row
            .col-lg-4.col-md-4.col-sm-12
                each user in users
                    a(href="/user/#{user.username}")
                        .col-lg-12.col-md-12.col-sm-12
                            .col-lg-4.col-md-4.col-sm-4
                                mixin user_photo(user.photo)
                            .col-lg-4.col-md-4.col-sm-4
                                | #{user.username}
                            .col-lg-4.col-md-4.col-sm-4
                                mixin sentiment(user.sentiment)